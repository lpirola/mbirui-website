---
import { getCollection } from 'astro:content';
import Layout from '~/layouts/PageLayout.astro';

export async function getStaticPaths() {
  const equipe = await getCollection('equipe');

  return equipe.map((membro) => ({
    params: { slug: membro.slug },
    props: { membro },
  }));
}

const { membro } = Astro.props;
const { Content } = await membro.render();
const data = membro.data;

const metadata = {
  title: `${data.nome} — Projeto Mbiru\'i`,
  description: data.bio,
};
---

<Layout metadata={metadata}>
  <article class="py-12 sm:py-16 lg:py-20">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="mb-8">
        <a href="/equipe" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">
          &larr; Voltar para equipe
        </a>
      </div>

      <div class="flex flex-col md:flex-row gap-8 mb-8">
        {data.foto && (
          <img
            src={data.foto}
            alt={data.nome}
            class="w-48 h-48 rounded-full object-cover mx-auto md:mx-0"
          />
        )}

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-4xl font-bold mb-4">{data.nome}</h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 mb-4">{data.papel}</p>
          <span class="inline-block text-sm px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">
            Período: {data.periodo}
          </span>
        </div>
      </div>

      <Content class="prose prose-lg dark:prose-invert max-w-none" />
    </div>
  </article>
</Layout>
