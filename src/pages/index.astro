---
import { getCollection } from 'astro:content';
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import logoImage from '~/assets/images/logo.png';

const projetos = (await getCollection('projetos'))
  .filter(p => p.data.status === 'ativo')
  .slice(0, 3);

const producoes = (await getCollection('producoes'))
  .sort((a, b) => b.data.ano - a.data.ano)
  .slice(0, 4);

const artigos = (await getCollection('artigos'))
  .sort((a, b) => b.data.data - a.data.data)
  .slice(0, 3);

const equipe = (await getCollection('equipe'))
  .filter(p => p.data.periodo === 'atual');

const metadata = {
  title: 'Projeto Mbiru\'i — IA para Saúde Indígena',
  description: 'Inteligência Artificial, tradução e acesso à informação em saúde indígena.',
};
---

<Layout metadata={metadata}>
  <Hero
    image={{ src: logoImage, alt: "Logo Projeto Mbiru'i - Bacilos de tuberculose" }}
    actions={[
      { text: 'Acessar o chatbot', href: '/chatbot', variant: 'primary' },
      { text: 'Conheça os projetos', href: '/projetos' },
    ]}
  >
    <Fragment slot="title">
      Projeto <span class="text-accent dark:text-white">Mbiru'i</span>
    </Fragment>

    <Fragment slot="subtitle">
      Inteligência Artificial, tradução e acesso à informação
      em saúde indígena.
    </Fragment>
  </Hero>

  {projetos.length > 0 && (
    <section class="py-12 sm:py-16 lg:py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8">Projetos</h2>

        <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {projetos.map(({ slug, data }) => (
            <li class="border rounded-lg p-6 hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-semibold mb-2">
                <a href={`/projetos/${slug}`}>
                  {data.title}
                </a>
              </h3>

              <p class="text-gray-600 dark:text-gray-300">{data.descricao_curta}</p>
              <span class="inline-block mt-2 text-sm px-3 py-1 rounded-full bg-secondary/30 dark:bg-primary/20 text-primary dark:text-accent">
                {data.status}
              </span>
            </li>
          ))}
        </ul>
      </div>
    </section>
  )}

  {producoes.length > 0 && (
    <section class="py-12 sm:py-16 lg:py-20 bg-secondary/20 dark:bg-gray-800">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8">Produções do projeto</h2>

        <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {producoes.map(({ data }) => (
            <li class="border rounded-lg p-6 hover:shadow-lg transition-shadow">
              <strong class="block text-lg mb-2">{data.title}</strong>
              <span class="text-sm text-gray-500 dark:text-gray-400">
                ({data.tipo}, {data.ano})
              </span>

              {data.arquivo && (
                <a
                  href={data.arquivo}
                  target="_blank"
                  class="inline-block mt-4 text-primary hover:text-accent dark:text-accent dark:hover:text-white"
                >
                  Acessar &rarr;
                </a>
              )}
            </li>
          ))}
        </ul>

        <div class="mt-8 text-center">
          <a href="/producoes" class="text-primary hover:text-accent dark:text-accent dark:hover:text-white">
            Ver todas as produções &rarr;
          </a>
        </div>
      </div>
    </section>
  )}

  {artigos.length > 0 && (
    <section class="py-12 sm:py-16 lg:py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8">Artigos e publicações</h2>

        <ul class="space-y-4">
          {artigos.map(({ slug, data }) => (
            <li class="border-b pb-4">
              <a
                href={`/artigos/${slug}`}
                class="text-xl font-semibold hover:text-primary dark:hover:text-accent"
              >
                {data.title}
              </a>
              <br />
              <small class="text-gray-500 dark:text-gray-400">
                {new Date(data.data).toLocaleDateString('pt-BR')}
                {data.autor && ` • ${data.autor}`}
              </small>
            </li>
          ))}
        </ul>

        <div class="mt-8">
          <a href="/artigos" class="text-primary hover:text-accent dark:text-accent dark:hover:text-white">
            Ver todos os artigos &rarr;
          </a>
        </div>
      </div>
    </section>
  )}

  {equipe.length > 0 && (
    <section class="py-12 sm:py-16 lg:py-20 bg-secondary/20 dark:bg-gray-800">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8">Equipe</h2>

        <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {equipe.map(({ data }) => (
            <li class="text-center border rounded-lg p-6 hover:shadow-lg transition-shadow">
              {data.foto && (
                <img
                  src={data.foto}
                  alt={data.nome}
                  class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
                />
              )}

              <strong class="block text-lg">{data.nome}</strong>
              <span class="text-sm text-gray-600 dark:text-gray-400">{data.papel}</span>
            </li>
          ))}
        </ul>

        <div class="mt-8 text-center">
          <a href="/equipe" class="text-primary hover:text-accent dark:text-accent dark:hover:text-white">
            Conheça toda a equipe &rarr;
          </a>
        </div>
      </div>
    </section>
  )}

  <CallToAction
    title="Quer colaborar?"
    subtitle="Buscamos pessoas e instituições interessadas em saúde indígena, inovação e IA responsável."
    actions={[
      { text: 'Entrar em contato', href: '/contato', variant: 'primary' },
    ]}
  />
</Layout>
