---
import { getCollection } from 'astro:content';
import Layout from '~/layouts/PageLayout.astro';

export async function getStaticPaths() {
  const pesquisas = await getCollection('pesquisa');

  return pesquisas.map((pesquisa) => ({
    params: { slug: pesquisa.slug },
    props: { pesquisa },
  }));
}

const { pesquisa } = Astro.props;
const { Content } = await pesquisa.render();
const data = pesquisa.data;

const metadata = {
  title: `${data.title} — Projeto Mbiru\'i`,
  description: data.descricao,
};
---

<Layout metadata={metadata}>
  <article class="py-12 sm:py-16 lg:py-20">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="mb-8">
        <a href="/pesquisa" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">
          &larr; Voltar para pesquisa
        </a>
      </div>

      <h1 class="text-4xl font-bold mb-4">{data.title}</h1>

      {data.area && (
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          Área: {data.area}
        </p>
      )}

      <Content class="prose prose-lg dark:prose-invert max-w-none" />
    </div>
  </article>
</Layout>
