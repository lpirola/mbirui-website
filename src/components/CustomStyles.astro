---
import '@fontsource-variable/inter';

/*
  Paleta de cores do Projeto Mbiru'i
  Baseada na imagem do logo (bacilos de tuberculose)

  | Cor                          | RGB             | HEX     |
  |------------------------------|-----------------|---------|
  | Bacilos (vermelho vibrante)  | 252, 72, 49     | #fc4821 |
  | Fundo médio (bege)           | 211, 178, 168   | #d3b2a8 |
  | Fundo dominante (off-white)  | 252, 247, 241   | #fcf7f1 |
  | Bordas/acentos (vermelho escuro) | 184, 15, 29 | #b80f1d |
*/
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Cores principais - Projeto Mbiru'i */
    --aw-color-primary: rgb(184 15 29);      /* #b80f1d - vermelho escuro */
    --aw-color-secondary: rgb(211 178 168);  /* #d3b2a8 - bege médio */
    --aw-color-accent: rgb(252 72 49);       /* #fc4821 - vermelho vibrante */

    --aw-color-text-heading: rgb(60 30 30);
    --aw-color-text-default: rgb(45 35 35);
    --aw-color-text-muted: rgb(45 35 35 / 66%);
    --aw-color-bg-page: rgb(252 247 241);    /* #fcf7f1 - off-white */

    --aw-color-bg-page-dark: rgb(35 20 20);

    ::selection {
      background-color: rgb(252 72 49 / 30%);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Cores principais - Projeto Mbiru'i (modo escuro) */
    --aw-color-primary: rgb(252 72 49);      /* #fc4821 - vermelho vibrante */
    --aw-color-secondary: rgb(184 15 29);    /* #b80f1d - vermelho escuro */
    --aw-color-accent: rgb(252 120 100);     /* versão mais clara do accent */

    --aw-color-text-heading: rgb(252 247 241);
    --aw-color-text-default: rgb(240 230 225);
    --aw-color-text-muted: rgb(240 230 225 / 66%);
    --aw-color-bg-page: rgb(35 20 20);

    ::selection {
      background-color: rgb(252 72 49 / 50%);
      color: snow;
    }
  }
</style>
